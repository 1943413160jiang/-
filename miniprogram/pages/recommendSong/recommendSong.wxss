.recommend_song_container .header{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommend_song_container .header image{
  width: 100%;
  height: 100%;
}
.recommend_song_date{
  position: absolute;
  top: 50%;
  left: 52%;
  transform: translate(-50%);
}
/* 播放全部区域 */
.recommend_song_all{
  position: relative;
  top: -20rpx;
  border-radius: 30rpx;
  padding: 20rpx 20rpx;
  background-color: #fff;
}
.recommend_song_all .allchecked{
  float: right;
}
/* 歌曲列表 */
.recommend_song_list{
  height: calc(100vh - 381rpx);
}
.song_list_item{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.song_list_left{
  display: flex;
}
.song_list_left image{
  width: 100rpx;
  height: 100rpx;
  margin:0  20rpx;
}
.song_list_item .song_list_name{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.song_list_name text:nth-child(1){
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song_list_right i{
margin-right: 20rpx;
line-height: 100rpx;
}
