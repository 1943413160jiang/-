/* 视频头部 */
.view_container{
  padding: 10rpx;
}
.view_container .header{
  display: flex;
}
.view_container .header .search{
  color: red;
  flex: 1;
  border: 1px solid #ccc;
  margin: 0 20rpx;
  text-align: center;
  font-size: 28rpx;
  align-items: center;
  line-height: 60rpx;

}
.view_container .header image{
  width: 60rpx;
  height: 60rpx;
}
/* 视频导航 */
.scroll_nav{
  display: flex;
  height: 76rpx;
  white-space: nowrap;
}
.scroll_nav .item{
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.scroll_nav  .active{
  border-bottom: 2px solid red;
}
/* 播放视频区域 */
.video_player_list{
  /* css3计算属性 1vh表示1%视口宽度 */
  height: calc(100vh - 140rpx);
}
.video_player_item{
  padding: 0 3%;
}
.video_player_item .common{
  width: 100%;
  height: 360rpx;
}
.video_player_title{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-bottom: 1px solid #ccc;
  height: 80rpx;
  line-height: 60rpx;
  margin-bottom: 10rpx;
}
.video_player_instrdocuce{
  display: flex;
  justify-content: space-between;
  height: 150rpx;
}
.video_player_instrdocuce_left{
  display: flex;
  align-items: center;
}
.video_user_img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.video_player_instrdocuce_right{
  display: flex;
  align-items: center;
}
.video_player_instrdocuce_right .iconfont{
  position: relative;
  font-size: 50rpx;
  margin-right: 30rpx;
}
.video_player_instrdocuce_right .iconfont em{
  position: absolute;
  top: -20rpx;
  right: -14rpx;
  font-size: 23rpx;
}